<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="632dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="440dp"
        android:src="@drawable/faq"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mengapa Kami ?"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="30dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berawal dari latar belakang yang kompleks beserta visi misi dalam menempuh Great Era dalam Kejayaan Indonesia untuk meraih Indonesia Unngul 2025"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktif - Solutif - Kreatif "
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="440dp"
        android:textSize="24dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bentu kami mewujudkan Indonesia yang bebas macet dan efektif dalam menurunkan angka kontinuitas pengangguran"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="199dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/plane" />

    <Button
        android:id="@+id/gabung"
        android:layout_width="286dp"
        android:layout_height="38dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="60dp"
        android:text="Gabung"
        android:textColor="@android:color/holo_blue_light"/>

</RelativeLayout>